---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact Us">
  <div class="container mx-auto px-4 py-12">
    <h1 class="font-display text-4xl text-rosita-terra mb-8">Contact Us</h1>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
      <div>
        <form class="space-y-6">
          <div>
            <label class="block font-body mb-2" for="name">Name</label>
            <input type="text" id="name" class="w-full p-3 border border-gray-300 rounded-lg" />
          </div>
          <div>
            <label class="block font-body mb-2" for="email">Email</label>
            <input type="email" id="email" class="w-full p-3 border border-gray-300 rounded-lg" />
          </div>
          <div>
            <label class="block font-body mb-2" for="message">Message</label>
            <textarea id="message" rows="5" class="w-full p-3 border border-gray-300 rounded-lg"></textarea>
          </div>
          <button type="submit" class="bg-rosita-terra text-white font-body px-8 py-3 rounded-lg hover:bg-rosita-orange transition-colors">
            Send Message
          </button>
        </form>
      </div>
      
      <div>
        <div class="bg-white p-8 rounded-lg shadow-md">
          <h2 class="font-display text-2xl mb-4">Visit Us</h2>
          <p class="font-body mb-4">
            123 Latin Quarter<br/>
            Your City, ST 12345
          </p>
          
          <h2 class="font-display text-2xl mb-4 mt-8">Hours</h2>
          <p class="font-body mb-4">
            Tuesday - Friday: 8am - 3pm<br/>
            Saturday - Sunday: 9am - 4pm<br/>
            Monday: Closed
          </p>
          
          <h2 class="font-display text-2xl mb-4 mt-8">Contact Info</h2>
          <p class="font-body">
            Phone: (555) 123-4567<br/>
            Email: hola@rositascafe.com
          </p>
        </div>
      </div>
    </div>
  </div>
</Layout>